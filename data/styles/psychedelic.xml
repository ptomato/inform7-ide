<style-scheme id="psychedelic" 
_name="Psychedelic" 
version="1.0">
    <author>P. F. Chimento</author>
    <_description>Based on the OS X "Psychedelic" color scheme</_description>

    <!-- The scheme tries to look like the original OS/X scheme -->

    <!-- Palette -->
    <color name="background"        value="#FFFFFF"/>
    <color name="text"              value="#000000"/>
    <color name="string"            value="#0000FF"/>
    <color name="string_markup"     value="#FF00FF"/>
    <color name="keyword"           value="#FF8080"/>
    <color name="comment"           value="#00CC00"/>
    <color name="error"             value="#FF0000"/>
    <color name="highlight"         value="#24D4D4"/>
	<color name="locked"			value="#000000"/>
	<color name="unlocked"			value="#6865FF"/>
	<color name="skein_input"		value="#6865FF"/>
    <color name="i6_include"        value="#606060"/>
    <color name="i6_directive"      value="#7F00FF"/>
    <color name="i6_property"       value="#007FFF"/>
    <color name="i6_function"       value="#00B2B2"/>
    <color name="i6_keyword"        value="#CC4C00"/>
    <color name="i6_assembly"       value="#FF0000"/>
    <color name="i6_codealpha"      value="#000000"/>
    <color name="i6_escape"         value="#0000FF"/>
	<color name="trans_changed"		value="#FFF0F0"/>
	<color name="trans_unchanged"	value="#F0FFF0"/>
	<color name="trans_input"		value="#E0F0FF"/>
	<color name="trans_unset"		value="#F0F0F0"/>
    
    <!-- GtkSourceView appearance styles-->
    <style name="text"              foreground="text" background="background"/>
    <style name="bracket-match"     bold="true"/>
    <style name="bracket-mismatch"  foreground="background" background="error" bold="true"/>
    <style name="search-match"      foreground="text" background="highlight"/>  

    <!-- I7 core types -->
    <style name="inform7:plain"     foreground="text" background="background"/>
    <style name="inform7:string"    foreground="string" bold="true"/>
    <style name="inform7:markup"    foreground="string_markup" bold="false" italic="true"/>
    <style name="inform7:comment"   foreground="comment" bold="false" italic="true"/>
    <style name="inform7:heading"   bold="true"/>
    <style name="inform7:keyword"   />
    <style name="inform7:boolean"   />

    <!-- I6 core types -->
    <style name="inform7:i6code"    foreground="i6_include"/>
    <style name="inform:keyword"    foreground="i6_keyword" italic="true"/>
    <style name="inform:function"   foreground="i6_function" italic="true"/>
    <style name="inform:comment"    foreground="comment" italic="true"/>
    <style name="inform:escape"     foreground="i6_escape" bold="true"/>
    <style name="inform:assembly"   foreground="i6_assembly" bold="true"/>
    <style name="inform:directive"  foreground="i6_directive"/>
    <style name="inform:property"   foreground="i6_property" bold="true"/>
    <style name="inform:string"     foreground="keyword"/>
	
    <!-- Others -->
    <style name="def:error"           foreground="error" background="highlight" bold="true"/>
    <style name="def:note"            foreground="highlight" bold="true"/>
    <style name="def:underlined"      italic="true" underline="true"/>
    
</style-scheme>
