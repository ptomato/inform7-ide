<style-scheme id="dark" _name="Inform Dark" version="1.0">
  <_description>Dark mode</_description>

  <!-- Palette -->
  <color name="source_paper"      value="#000000"/>
  <color name="extension_paper"   value="#420d00"/>
  <color name="heading"           value="#ea6c69"/>
  <color name="main_text"         value="#ffffff"/>
  <color name="comment"           value="#95f99c"/>
  <color name="quoted_text"       value="#5dd5fd"/>
  <color name="text_substitution" value="#ee8be7"/>
  <color name="error"             value="#FF0000"/>
  <color name="highlight"         value="#24D4D4"/>
  <color name="i6_include"        value="#606060"/>
  <color name="i6_directive"      value="#190A3F"/>
  <color name="i6_property"       value="#0A0A3F"/>
  <color name="i6_function"       value="#0A3F3F"/>
  <color name="i6_keyword"        value="#3A0726"/>
  <color name="i6_assembly"       value="#3A2626"/>
  <color name="i6_escape"         value="#333326"/>

  <!-- GtkSourceView appearance styles-->
  <style name="text"              foreground="main_text" background="source_paper"/>
  <style name="bracket-match"     bold="true"/>
  <style name="bracket-mismatch"  foreground="source_paper" background="error" bold="true"/>
  <style name="search-match"      foreground="main_text" background="highlight"/>
  <style name="cursor"            foreground="main_text"/>
  <style name="secondary-cursor"  foreground="main_text"/>

  <!-- I7 core types -->
  <style name="inform7x:plain"    foreground="main_text" background="extension_paper"/>
  <style name="inform7:string"    foreground="quoted_text" bold="true"/>
  <style name="inform7:markup"    foreground="text_substitution" bold="false" italic="true"/>
  <style name="inform7:comment"   foreground="comment" bold="false" italic="true"/>
  <style name="inform7:heading"   foreground="heading" bold="true" underline="single" scale="large"/>
  <style name="inform7:keyword"   />
  <style name="inform7:boolean"   />

  <!-- I6 core types -->
  <style name="inform7:i6code"    foreground="i6_include"/>
  <style name="inform:keyword"    foreground="i6_keyword" italic="true"/>
  <style name="inform:function"   foreground="i6_function" italic="true"/>
  <style name="inform:comment"    foreground="comment" italic="true"/>
  <style name="inform:escape"     foreground="i6_escape" bold="true"/>
  <style name="inform:assembly"   foreground="i6_assembly" bold="true"/>
  <style name="inform:directive"  foreground="i6_directive"/>
  <style name="inform:property"   foreground="i6_property" bold="true"/>
  <style name="inform:string"     foreground="keyword"/>

  <!-- Others -->
  <style name="def:error"         foreground="error" background="highlight" bold="true"/>
  <style name="def:note"          foreground="highlight" bold="true"/>
  <style name="def:underlined"    italic="true" underline="true"/>
</style-scheme>
